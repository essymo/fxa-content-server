<div id="main-content" class="card">
  {{#error}}
    <header>
      <h1 id="fxa-signin-unblock-header">{{#t}}Authorize this sign-in{{/t}}</h1>
    </header>

    <section>
      <div class="error visible">{{error}}</div>
    </section>
  {{/error}}
  {{^error}}
  <header>
    <h1 id="fxa-signin-unblock-header">{{#t}}Authorize this sign-in{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <div class="graphic graphic-mail">{{#t}}Authorize this sign-in{{/t}}</div>

    <p class="verification-email-message">
    {{#t}}To better protect your Firefox data, there is an authorization code waiting for you at %(email)s.{{/t}}
    </p>

    <form novalidate>
      <div class="input-row unblock-code-row">
        <input type="text" class="tooltip-below unblock-code" id="unblock_code" placeholder="{{#t}}Enter authorization code{{/t}}" required maxlength="{{unblockCodeLength}}" autofocus />
      </div>

      <div class="button-row">
        <button type="submit" class="use-logged-in">{{#t}}Continue{{/t}}</button>
      </div>

    </form>

    <div class="links">
      <a id="resend" class="delayed-fadein left" href="#">{{#t}}Didn't arrive? Resend{{/t}}</a>
      <a href="https://support.mozilla.org" class="delayed-fadein right">{{#t}}Why is this happening?{{/t}}</a>
    </div>
  </section>
  {{/error}}
</div>
